<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/nav-bar.css">
    <link rel="stylesheet" href="/css/product-details.css">
    <link rel="stylesheet" href="/css/prod-slider.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/home-styles.css">
</head>

<body>
    <!-- Nav-bar -->
    <%- include('../partials/nav-bar') %>

    <main>
        <div class="main-container">
            <div class="left-side">
                <div class="brand-logo-wrapper">
                    <img src="/images/products/logos/<%= (product.brands.logo) ? product.brands.logo : 'default-logo.jpg' %>" alt="">
                </div>
                <div class="image-container">
                    <img src="/images/products/<%= product.image %>" alt="">
                </div>
            </div>
            <div class="info-container">
                <div class="prod-info">
                    <h2 class="brand"><%= product.brands.name %></h2>
                    <h1 class="model"><%= product.model %></h1>
                    <p class="prod-owner">Por <span><%= product.users.fullname %></span></p>
                </div>
                <div class="description">
                    <h3 class="category"><%= product.categories.name %></h3>
                    <div class="price">
                        <h3>$<%= product.price %></h3>
                        <p><%= product.discount %>% OFF</p>
                    </div>
                </div>
                <div class="selection">
                    <h3>Colores</h3>
                    <div class="colors-wrapper">
                        <% for(let j=0; j<colores.length; j++) { %>
                        <div class="color" style=<%= 'background-color:' + colores[j] + ';' %> ></div>
                        <% } %>
                    </div>
                
                    <h3>Talles</h3>
                    <select class="size-dropdown" size="1">
                        <!-- HAY QUE MODIFICAR ESTO PARA QUE MUESTRE VARIOS (SIMIL A COMO SE HACE CON COLORES) -->
                        <option>39</option>
                        <option>40</option>
                        <option>41</option>
                        <option>42</option>
                        <option>43</option>
                        <option>44</option>
                    </select>
                    <h3>Descripcion</h3>
                    <details class="prod-description">
                        <summary>Ver descripci√≥n</summary>
                        <p><%= product.description %></p>
                    </details>
                    <p class="stock"><%= product.stock %> products en stock!</p>
                </div>
                <div class="buy">
                    <p>Comprar ahora</p>
                </div>
            </div>
        </div>
    </main>

    <!-- PRODUCTS CARROUSEL -->
    <%- include('../partials/product-slider') %>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script src="/js/hamburger.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>