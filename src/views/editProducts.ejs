<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="module" src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons/ionicons.js"></script>
    <link rel="icon" href="/images/logos/shoocity-fav.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/nav-bar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/login-form.css">
    <link rel="stylesheet" href="/css/home-styles.css">
    <link rel="stylesheet" href="/css/prod-slider.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/recover.css">
    <link rel="stylesheet" href="/css/editProducts.css">
    <!-- FONT AWESOME -->
    <script src="https://kit.fontawesome.com/95aa681591.js" crossorigin="anonymous"></script>
    <!-- GOOGLE FONTS -->
    <!-- Open Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <!-- Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>Shoocity</title>
</head>

<body>
    <div class="login-page">
     <!-- Inicio Nav-bar -->
     <%- include('./partials/nav-bar') %>
     <!-- Fin Nav-bar -->

     <!-- Inicio Main (página) -->
	 <main>
		<div class="color"></div>
		<div class="color"></div>
		<div class="color"></div>
		<div class="box">
			<div class="square" style="--i:0;"></div>
			<div class="square" style="--i:1;"></div>
			<div class="square" style="--i:2;"></div>
			<div class="square" style="--i:3;"></div>
			<div class="square" style="--i:4;"></div>
			 <div class="container">
			 	<div class="form">
			 		<h2>Ingresar</h2>
			 		<form >
            <div class="inputBox">
              <input type="text"  placeholder="Usuario" name="usuario" />
            </div>
            <div class="inputBox">
              <input maxlength="25" type="password" class="controls" name="contrasena" value="" placeholder="Contraseña" id="password" data-lpignore="true">
              <ion-icon onclick="toggle()" class="password-icon"	id ="eye-icon" name="eye-off" size="large" ></ion-icon>
            </div> 
          <br>
          <label>
            <input type="checkbox">
            <span></span>
            <small>Recuérdame</small>
          </label>
            <div class="inputBox">
			    <input type="submit" value="Enviar"/>
			</div>
			<p class="forget">
              <a href="recover">¿Olvidaste tu contraseña?</a>
            </p>
            <br>
            <p class="forget">
              <a href="register-form">Registrate en Shoocity?</a>
            </p>
         </form>
			 	</div>
			 </div>
		</div>
	</main>
    <!-- Fin Main (página) -->
      
        <!-- Inicio Footer -->
        <%- include('./partials/footer') %>
        <script src="/js/panels.js"></script>
        <script src="/js/hamburger.js"></script>
        <script src="/js/nav-bar-tabs.js"></script>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <!-- Fin Footer -->

	<script type="text/javascript">
		function toggle() {
			document.querySelector("#eye-icon").name === "eye" ? document.querySelector("#eye-icon").name = "eye-off" : document.querySelector("#eye-icon").name = "eye"
			document.querySelector("#password").type === "password" ? document.querySelector("#password").type = "text" : document.querySelector("#password").type = "password"
		}

	</script>


</body>
</html>