<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %> 
      <link rel="stylesheet" href="/css/nav-bar.css">
      <link rel="stylesheet" href="/css/footer.css">
      <link rel="stylesheet" href="/css/login-form.css">
      <link rel="stylesheet" href="/css/home-styles.css">
      <link rel="stylesheet" href="/css/prod-slider.css">
      <link rel="stylesheet" href="/css/normalize.css">
</head>

<body>
    <div class="login-page">
     <!-- Inicio Nav-bar -->
     <%- include('../partials/nav-bar') %>
     <!-- Fin Nav-bar -->

     <!-- Inicio Main (página) -->
	 <main>
		<div class="color"></div>
		<div class="color"></div>
		<div class="color"></div>
		<div class="box">
			<div class="square" style="--i:0;"></div>
			<div class="square" style="--i:1;"></div>
			<div class="square" style="--i:2;"></div>
			<div class="square" style="--i:3;"></div>
			<div class="square" style="--i:4;"></div>
			<div class="container">
			 	<div class="form-login">
			 		<h2>Ingresar</h2>
			 		<form action="/users/login" method="POST">
						<div class="inputBox">
							<input type="text" placeholder="Email" name="email" value="<%= (locals && locals.old) ? old.email : '' %>" required />
						</div>
						<div class="inputBox">
							<input maxlength="25" type="password" class="controls" name="password" value="" placeholder="Contraseña" id="password" data-lpignore="true" required>
							<ion-icon onclick="toggle()" class="password-icon"	id ="eye-icon" name="eye-off" size="large" ></ion-icon>
						</div> 
          				<br>
						<label>
							<input type="checkbox">
							<span></span>
							<small>Recuérdame</small>
						</label>
						<div class="inputBox">
							<input type="submit" value="Enviar"/>
						</div>
          				<br>
						<p class="forget">
							<a href="recover">¿Olvidaste tu contraseña?</a>
						</p>
						<p class="forget">
							<a href="register">Registrate en Shoocity?</a>
						</p>
						<% if (locals.errors && errors.loginFailed) { %>
						<p class="forget" style="color: red;">
							<%= errors.loginFailed.msg %>
						</p>
						<% } %>
         			</form>
			 	</div>
			</div>
		</div>
	</main>
    <!-- Fin Main (página) -->
      
        <!-- Inicio Footer -->
        <%- include('../partials/footer') %>

        <script src="/js/panels.js"></script>
        <script src="/js/hamburger.js"></script>
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <!-- Fin Footer -->

	<script type="text/javascript">
		function toggle() {
			document.querySelector("#eye-icon").name === "eye" ? document.querySelector("#eye-icon").name = "eye-off" : document.querySelector("#eye-icon").name = "eye"
			document.querySelector("#password").type === "password" ? document.querySelector("#password").type = "text" : document.querySelector("#password").type = "password"
		}

	</script>


</body>
</html>