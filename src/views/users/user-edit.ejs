<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" href="/css/user-edit.css">
    <link rel="stylesheet" href="/css/nav-bar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/normalize.css">
</head>
<body>
    <!-- Nav-bar -->
    <%- include('../partials/nav-bar') %>

    <main class="main-profile-edit">
        <div class="edit-wrapper">
            <h1 class="form-title">Hello <%= editUser.fullname %></h1>
            <h4 class="form-subtitle ">Edit your profile</h4>

            <form action="/users/<%= editUser.id %>?_method=PUT" method="POST" enctype="multipart/form-data"> <!-- enctype="multipart/form-data" -->
                <div class="edit-form-left">
                    <h3 class="edit-label">Datos</h3>
                    <div class="form-group first-last-name">
                        <label for="fullname">Nombre y apellido</label>
                        <input type="text" name="fullname" id="name" value="<%= editUser.fullname %>" required>
                    </div>
                    <div class="form-group user">
                        <label for="user">Usuario</label>
                        <input type="text" name="username" id="username" value="<%= editUser.username %>" required>
                    </div>
                    <div class="form-group user" style="display: none;">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" minlength="6" value="<%= editUser.password %>" required>
                    </div>
                    <div class="form-group email">
                        <label for="email">E-mail</label>
                        <input type="email" name="email" id="email" value="<%= editUser.email %>" required>
                    </div>
                    <div class="form-group address">
                        <label for="street">Calle</label>
                        <input type="text" name="street" id="address" value="<%= editUser.street %>" required>
                    </div>
                    <div class="form-group addressNumber">
                        <label for="number">Numero</label>
                        <input type="number" name="number" id="addressNumber" value="<%= editUser.number %>" required>
                    </div>
                    <h3 class="edit-label">Fecha de nacimiento</h3>
                    <div class="form-group">
                        <input type="date" name="birthdate" id="birthdate" value="<%= editUser.birthdate %>" required>
                    </div>
                </div>
                <div class="edit-form-right">
                    <h3 class="edit-label">Perfil de usuario</h3>
                    <div class="radio-list">
                        <div class="radio-group">
                            <input type="radio" id="role" name="role" value="admin" <%= (editUser.role == 'admin') ? "checked" : '' %> checked>
                            <label for="buySell">Administrador</label>
                        </div>
                        <div class="radio-group">
                            <input type="radio" id="role2" name="role" value="customer" <%= (editUser.role == 'customer') ? "checked" : '' %>>
                            <label for="buySell">Cliente</label>
                        </div>
                    </div>
                    <h3 class="edit-label">Genero</h3>
                    <div class="radio-list">
                        <div class="radio-group">
                            <input type="radio" id="gender" name="gender" value="male" <%= (editUser.gender == 'male') ? "checked" : '' %> checked>
                            <label for="gender">Hombre</label>
                        </div>
                        <div class="radio-group">
                            <input type="radio" id="gender2" name="gender" value="female" <%= (editUser.gender == 'female') ? "checked" : '' %>>
                            <label for="gender">Mujer</label>
                        </div>
                        <div class="radio-group">
                            <input type="radio" id="gender3" name="gender" value="other" <%= (editUser.gender == 'other') ? "checked" : '' %>>
                            <label for="gender">Otro</label>
                        </div>
                    </div>
                    <h3 class="edit-label">Pa√≠s de nacimiento</h3>
                    <select class="country-combobox" name="country" id="country">
                        <option value="Argentina" <%= (editUser.country == 'Argentina') ? "selected" : '' %>>Argentina</option>
                        <option value="Brasil" <%= (editUser.country == 'Brasil') ? "selected" : '' %>>Brasil</option>
                        <option value="Chile" <%= (editUser.country == 'Chile') ? "selected" : '' %>>Chile</option>
                        <option value="Peru" <%= (editUser.country == 'Peru') ? "selected" : '' %>>Peru</option>
                        <option value="Bolivia" <%= (editUser.country == 'Bolivia') ? "selected" : '' %>>Bolivia</option>
                        <option value="Uruguay" <%= (editUser.country == 'Uruguay') ? "selected" : '' %>>Uruguay</option>
                    </select>
                    <div class="form-group cash">
                        <label for="cash">Cash</label>
                        <input type="number" name="cash" id="cash" value="<%= editUser.cash %>" required>
                    </div>
                    <div class="upload-file-container">
                        <label for="profileImage">Foto de perfil</label>
                        <input type="file" id="profileImage" name="profileImage">
                    </div>
                    <div class="upload-file-container">
                        <label for="bannerImage">Banner</label>
                        <input type="file" id="bannerImage" name="bannerImage">
                    </div>
                </div>
                <div class="send-container">
                    <div class="error-message-container">
                        <label class="error-msg"><%= errorMsg ? errorMsg : '' %></label>
                    </div>
                    <button type="submit" class="submit-btn">Terminar</button>
                </div>
            </form>
        </div>



    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script src="/js/hamburger.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>